// E.g 'grid--top' will also get 'display: flex' property

[class^="grid"], [class*=" grid"] {
  display: flex;
}

.grid--top {
  align-items: flex-start;
}
.grid--bottom {
  align-items: flex-end;
}
.grid--center {
  align-items: center;
}

// All 'cell' objects will get min-width and min-height (IE 10)

[class^="cell"], [class*=" cell"] {
  min-width: 0px;
  min-height: 0px;
}

.cell {
  flex: 1 1 auto;
}
.cell-0 {
  flex: 0 0 auto;
}

.cell--top {
  align-self: flex-start;
}
.cell--center {
  align-self: center;
}
.cell--bottom {
  align-self: flex-end;
}

